<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.home.HomeFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_tab_layout"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginTop="19dp"
            app:tabBackground="@drawable/home_tab_selector"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingStart="5dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/home_tag_title1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="#지금 인기있는"
            android:textColor="@color/purple"
            android:layout_marginTop="68dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_event1_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_tag_title1_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/home_title1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 행사에요"
            android:layout_marginTop="68dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toEndOf="@id/home_tag_title1_tv"/>
        <TextView
            android:id="@+id/home_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="USER"
            android:textColor="@color/purple"
            android:layout_marginTop="199dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/home_tag_title1_tv"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/home_title2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님을 위한 추천"
            android:layout_marginTop="199dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/home_tag_title1_tv"
            app:layout_constraintStart_toEndOf="@id/home_user_name_tv"/>
        <TextView
            android:id="@+id/home_recommend_explain1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/home_user_name_tv"
            app:layout_constraintStart_toStartOf="@id/home_user_name_tv"/>
        <TextView
            android:id="@+id/home_recommend_explain2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:text="에게 인기있는 행사"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/home_user_name_tv"
            app:layout_constraintStart_toEndOf="@id/home_recommend_explain1_tv"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_event2_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_recommend_explain1_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>