<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_mypage_like_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/item_search_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_mypage_panel"
        android:background="@drawable/event_banner_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <View
        android:id="@+id/item_search_background"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:background="@drawable/event_banner_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/item_search_like_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_search_kind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_search_title_tv"
        android:layout_width="270dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="98dp"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pd_semibold"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_search_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/item_search_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/item_search_visited_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="250dp"
        tools:srcCompat="@drawable/btn_check_unclick"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_search_title_tv"/>


    <ImageButton
        android:id="@+id/item_search_like_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        tools:srcCompat="@drawable/btn_like_unclick"
        android:background="@color/transparent"
        app:layout_constraintStart_toEndOf="@id/item_search_visited_btn"
        app:layout_constraintTop_toBottomOf="@id/item_search_title_tv"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_search_star_panel"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            >
            <ImageView
                android:id="@+id/item_search_edit_star1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mypage_star_on" />
            <ImageView
                android:id="@+id/item_search_edit_star2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/mypage_star_off" />
            <ImageView
                android:id="@+id/item_search_edit_star3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/mypage_star_off"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/item_search_adapt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/item_search_cancel_tv"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="확인"/>
        <TextView
            android:id="@+id/item_search_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="취소"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>